<head>
    <link href="https://fonts.googleapis.com/css2?family=Comfortaa:wght@300;400;500;600;700&display=swap" rel="stylesheet">
</head>

<div class="form-container">
    <div class="jumbotron text-center" style="font-family: 'Comfortaa'; background-color: transparent; color: #FFFFFF">
        <img src="https://brew-queue.com/Images/BrewQueueLogoNoBackground.png" alt="Profile Picture" style="max-width: 200px; max-height: 200px;" />
        <h1 style="font-family: 'Comfortaa'; color: #FFFFFF; margin-top: -20px">BrewQueue</h1>
    </div>

    <a class="btn btn-blue-lg" href="@Url.Action("CreateAccount", "AccountCreate")">Create Account</a>
    <a class="btn btn-blue-lg" href="@Url.Action("AccountLogin", "AccountLogin")">Login</a>

    <h5>
        @Html.ActionLink("Browse as Guest", "SetGuest", "Home", null, new { @class = "nav-link", @style = "color: #FFFFFF; font-family: 'Comfortaa'" })
    </h5>
</div>
<style>
    .btn-blue-lg {
        display: block; /* Makes each button a block-level element */
        width: 100%; /* Ensures each button stretches to the full width of its container */
        padding: 14px 20px;
        font-size: 14px;
        line-height: 1.333333;
        color: #1e1e1e;
        background-color: rgb(64 255 154);
        border: 4px solid #FFFFFF;
        border-radius: 75px;
        margin-bottom: 10px; /* Adds space between the buttons */
        text-align: center; /* Center the text in the button */
        font-family: 'Comfortaa'
    }

    .form-container {
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: center;
        min-height: 100vh; /* Set the minimum height to 100% of the viewport height */
        margin: 0 auto; /* Centers the container horizontally */
        max-width: 100%; /* Adjust the maximum width as needed */
        width: 100%;
    }
</style>
<script>
    // Scroll to the bottom of the page when the page is loaded
    window.addEventListener('load', function () {
        window.scrollTo(0, document.body.scrollHeight);
    });
</script>