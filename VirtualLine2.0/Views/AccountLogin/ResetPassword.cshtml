<head>
    <link href="https://fonts.googleapis.com/css2?family=Comfortaa:wght@300;400;500;600;700&display=swap" rel="stylesheet">
</head>

<div class="form-container">
    <div class="jumbotron text-center" style="font-family: 'Comfortaa'; background-color: transparent; color: #FFFFFF">
        <h2 style=" color: rgb(64 255 154)">Reset Password</h2>
        <h4 style="margin-bottom: 20px">@ViewBag.Message</h4>

        @using (Html.BeginForm("ResetPassword", "AccountLogin", new { token = ViewBag.token }, FormMethod.Post))
        {
            <input type="hidden" name="token" value="@ViewBag.token">

            <div class="floating-label-group">
                <input style="font-size: 13px" type="password" id="NewPassword" name="NewPassword" required />
                <label for="NewPassword">New Password</label>
            </div>

            <div class="floating-label-group">
                <input style="font-size: 13px" type="password" id="NewPasswordConfirmation" name="NewPasswordConfirmation" required />
                <label for="NewPasswordConfirmation">Confirm New Password</label>
            </div>

            <button class="btn btn-blue-md" type="submit">Save Changes</button>
        }
    </div>
</div>

<style>
    .btn-blue-md {
        display: block; /* Makes each button a block-level element */
        width: 100%; /* Ensures each button stretches to the full width of its container */
        padding: 14px 20px;
        font-size: 14px;
        line-height: 1.333333;
        color: #1e1e1e;
        background-color: rgb(64 255 154);
        border: 4px solid #FFFFFF;
        border-radius: 75px;
        margin-bottom: 10px; /* Adds space between the buttons */
        text-align: center; /* Center the text in the button */
        font-family: 'Comfortaa'
    }

    .form-container {
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: center;
        height: 100vh;
        max-width: 100%; /* Adjust this value based on your design requirements */
        margin: 0 auto; /* Centers the container */
    }

    .floating-label-group {
        position: relative;
        margin-bottom: 20px;
        font-family: 'Comfortaa'
    }

        .floating-label-group input {
            font-size: 14px;
            color: #FFFFFF;
            background-color: transparent;
            border: 1px solid #FFFFFF;
            padding: 10px 10px 10px 5px;
            display: block;
            width: 100%;
            font-family: 'Comfortaa'
        }

        .floating-label-group label {
            color: #FFFFFF;
            pointer-events: none;
            position: absolute;
            top: 10px;
            left: 5px;
            transition: all 0.2s ease;
            font-family: 'Comfortaa'
        }

        .floating-label-group input:focus ~ label,
        .floating-label-group input:not(:placeholder-shown) ~ label,
        .floating-label-group input.filled ~ label {
            top: -14px;
            font-size: 12px;
        }
</style>
<script>
    // Scroll to the bottom of the page when the page is loaded
    window.addEventListener('load', function () {
        window.scrollTo(0, document.body.scrollHeight);
    });
</script>