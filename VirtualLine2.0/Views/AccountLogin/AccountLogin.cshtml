<head>
    <link href="https://fonts.googleapis.com/css2?family=Comfortaa:wght@300;400;500;600;700&display=swap" rel="stylesheet">
    <script src="https://cdn.onesignal.com/sdks/web/v16/OneSignalSDK.page.js" defer></script>
    
    <script>
        window.OneSignal = window.OneSignal || [];
        OneSignal.push(function () {
            OneSignal.init({
                appId: "f6d00091-edec-4303-af03-59f288d177e2",
                safari_web_id: "web.onesignal.auto.2bd24c9c-6b5e-41da-a209-1033c3319dfc",
                notifyButton: {
                    enable: true,
                },
            });

            document.querySelector('form').addEventListener('submit', function (event) {
                event.preventDefault(); // Prevent the form from submitting

                OneSignal.getUserId(function (userId) {
                    console.log("User ID:", userId); // Log the user ID
                    document.getElementById('OneSignalPlayerId').value = userId;

                    console.log("Input value before submit:", document.getElementById('OneSignalPlayerId').value); // Log the input value

                    event.target.submit(); // Submit the form
                });
            });
        });
        @*window.OneSignalDeferred = window.OneSignalDeferred || [];
        OneSignalDeferred.push(function (OneSignal) {
            OneSignal.init({
                appId: "f6d00091-edec-4303-af03-59f288d177e2",
                safari_web_id: "web.onesignal.auto.2bd24c9c-6b5e-41da-a209-1033c3319dfc",
                notifyButton: {
                    enable: true,
                },
            });


            // This function will be called when the form is submitted
            function fetchOneSignalPlayerIdAndSubmitForm(e) {
                e.preventDefault();  // Prevent the form from submitting immediately

                OneSignal.getUserId(function (userId) {
                    if (userId) {
                        // Assign the user ID to the hidden input and submit the form
                        document.getElementById('OneSignalPlayerId').value = userId;
                        e.target.submit();  // Submit the form now that we have the user ID
                    } else {
                        console.error('Could not retrieve OneSignal user ID.');
                        // Handle the case where you can't fetch the user ID here
                        // You might choose to submit the form anyway or show an error message
                    }
                });
            }

            // Add the event listener to the form's submit event
            document.addEventListener('DOMContentLoaded', function () {
                var form = document.querySelector('form');
                if (form) {
                    form.addEventListener('submit', fetchOneSignalPlayerIdAndSubmitForm);
                }

                // Scroll to the bottom of the page when it's loaded
                window.scrollTo(0, document.body.scrollHeight);
            });
        });*@
    </script>
</head>

<div class="form-container" style="font-family: 'Comfortaa'; width:100%">
    <div class="jumbotron text-center" style="font-family: 'Comfortaa'; background-color: rgb(229 229 229 / 0.75); color: #FFFFFF">
        <h2 style=" color: #1e1e1e">Account Login</h2>
        <h4 style="margin-bottom: 20px">@ViewBag.Message</h4>

        @using (Html.BeginForm("AccountLogin", "AccountLogin", FormMethod.Post))
        {
            <div class="floating-label-group" style="width:100%">
                <input type="text" id="Username" name="Username" required />
                <label for="Username">Username or Email</label>
            </div>
            <div class="floating-label-group">
                <div class="input-without-icon">
                    <input type="password" id="Password" name="Password" maxlength="15" required />
                    <label for="Password">Password</label>
                </div>
            </div>

            <input type="hidden" id="OneSignalPlayerId" name="OneSignalPlayerId">

            <button class="btn btn-blue-md" type="submit">Submit</button>

            <h5>
                @Html.ActionLink("Forgot Password", "ForgotPassword", "AccountLogin", null, new { @class = "nav-link", @style = "color: #1e1e1e; font-family: 'Comfortaa'" })
            </h5>

        }
    </div>
</div>



<style>
    .btn-blue-md {
        display: block; /* Makes each button a block-level element */
        width: 100%; /* Ensures each button stretches to the full width of its container */
        padding: 14px 20px;
        font-size: 14px;
        line-height: 1.333333;
        font-family: 'Comfortaa';
        color: #1e1e1e;
        background-color: rgb(64 255 154);
        border: 4px solid #FFFFFF;
        border-radius: 75px;
        margin-bottom: 10px; /* Adds space between the buttons */
        text-align: center; /* Center the text in the button */
    }

    .form-container {
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: center;
        height: 100vh; /* Set the height to 100% of the viewport height */
        margin: 0 auto; /* Centers the container horizontally */
        max-width: 100%; /* Adjust the maximum width as needed */
        width: 100%;
    }

    .input-with-icon {
        display: flex;
        align-items: center;
        width: 106.5%;
        font-family: 'Comfortaa'
    }

    .input-without-icon {
        display: flex;
        align-items: center;
        width: 100%;
        font-family: 'Comfortaa'
    }

    .info-icon {
        cursor: pointer;
        margin-left: 10px;
        font-family: 'Comfortaa'
        /* Removed position absolute and related properties */
    }

    .show-icon {
        cursor: pointer;
        position: absolute;
        right: 0; /* Align the icon to the right side */
        margin-right: 10px;
        top: 50%;
        transform: translateY(-50%); /* Center vertically */
        font-family: 'Comfortaa'
    }

    .floating-label-group {
        position: relative;
        margin-bottom: 20px;
        width: 100%;
    }

        .floating-label-group input {
            font-size: 15px;
            background-color: white;
            color: #1e1e1e;
            border: 1px solid #1e1e1e;
            padding: 10px 10px 10px 5px;
            display: block;
            width: 100%;
        }

        .floating-label-group label {
            color: #1e1e1e;
            pointer-events: none;
            position: absolute;
            top: 10px;
            left: 5px;
            transition: all 0.2s ease;
            display: flex;
            align-items: center;
        }

        .floating-label-group input:focus ~ label,
        .floating-label-group input:not(:placeholder-shown) ~ label,
        .floating-label-group input.filled ~ label {
            top: -16px;
            font-size: 14px;
        }
</style>
