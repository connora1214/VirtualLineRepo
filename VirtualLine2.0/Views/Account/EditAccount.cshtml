<head>
    <link href="https://fonts.googleapis.com/css2?family=Comfortaa:wght@300;400;500;600;700&display=swap" rel="stylesheet">
</head>

<div class="jumbotron text-center" style="font-family: 'Comfortaa'; background-color: transparent; color: #FFFFFF">
    <h2 style=" color: rgb(64 255 154)">Edit Account</h2>
    <h4 style="margin-bottom: 20px">@ViewBag.Message</h4>

    <div class="form-container">
        @using (Html.BeginForm("EditAccount", "Account", FormMethod.Post))
        {
            <div class="floating-label-group">
                <input style="font-size: 13px" type="text" id="FirstName" name="FirstName" value="@ViewBag.FirstName" required />
                <label for="FirstName">First Name</label>
            </div>
            <div class="floating-label-group">
                <input style="font-size: 13px" type="text" id="LastName" name="LastName" value="@ViewBag.LastName" required />
                <label for="LastName">Last Name</label>
            </div>
            <div class="floating-label-group">
                <input style="font-size: 13px" type="text" id="Phone" name="Phone" value="@ViewBag.Phone" required />
                <label for="Phone">Phone</label>
            </div>
            <button class="btn btn-blue-md" type="submit">Save Changes</button>
        }
        <h5>
            @Html.ActionLink("Cancel", "AccountInfo", "Account", null, new { @class = "nav-link", @style = "color: #E5E5E5; font-family: 'Comfortaa'" })
        </h5>
    </div>
</div>

<style>
    .btn-blue-md {
        display: block; /* Makes each button a block-level element */
        width: 100%; /* Ensures each button stretches to the full width of its container */
        padding: 14px 20px;
        font-size: 14px;
        line-height: 1.333333;
        color: #1e1e1e;
        font-family: 'Comfortaa';
        border: 4px solid rgb(64 255 154);
        background-color: rgb(64 255 154);
        border-radius: 75px;
        margin-bottom: 10px; /* Adds space between the buttons */
        text-align: center; /* Center the text in the button */
    }

    .form-container {
        display: flex;
        flex-direction: column;
        font-family: 'Comfortaa';
        align-items: center;
        justify-content: center;
        max-width: 100%; /* Adjust this value based on your design requirements */
        margin: 0 auto; /* Centers the container */
    }

    .floating-label-group {
        position: relative;
        font-family: 'Comfortaa';
        margin-bottom: 20px;
    }

        .floating-label-group input {
            font-size: 14px;
            color: #FFFFFF;
            background-color: transparent;
            border: 1px solid #FFFFFF;
            font-family: 'Comfortaa';
            padding: 10px 10px 10px 5px;
            display: block;
            width: 100%;
        }

        .floating-label-group label {
            color: #FFFFFF;
            pointer-events: none;
            font-family: 'Comfortaa';
            position: absolute;
            top: 10px;
            left: 5px;
            transition: all 0.2s ease;
        }

        .floating-label-group input:focus ~ label,
        .floating-label-group input:not(:placeholder-shown) ~ label,
        .floating-label-group input.filled ~ label {
            top: -14px;
            font-size: 12px;
        }
</style>