<h2 style=" color: #FFFFFF">Edit Account</h2>
<h3>@ViewBag.Message</h3>

@using (Html.BeginForm("EditAccount", "Account", FormMethod.Post))
{
<p>
    <label style="color:#FFFFFF" for="FirstName">First Name:</label>
    <input type="text" id="FirstName" name="FirstName" value="@ViewBag.FirstName" required />
</p>
<p>
    <label style="color:#FFFFFF" for="LastName">Last Name:</label>
    <input type="text" id="LastName" name="LastName" value="@ViewBag.LastName" required />
</p>
<p>
    <label style="color:#FFFFFF" for="Phone">Phone Number:</label>
    <input type="text" id="Phone" name="Phone" value="@ViewBag.Phone" required />
</p>
    <button class="btn btn-blue-md" type="submit">Save Changes</button>
}
<h5>
    @Html.ActionLink("Cancel", "AccountInfo", "Account", null, new { @class = "nav-link", @style = "color: #FFFFFF" })
</h5>

<style>
    .btn-blue-md {
        display: block; /* Makes each button a block-level element */
        width: 100%; /* Ensures each button stretches to the full width of its container */
        padding: 14px 20px;
        font-size: 14px;
        line-height: 1.333333;
        color: white;
        background-color: #2f4d5a;
        border: 4px solid #FFFFFF;
        border-radius: 75px;
        margin-bottom: 10px; /* Adds space between the buttons */
        text-align: center; /* Center the text in the button */
    }
</style>