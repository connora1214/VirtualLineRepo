<div class="jumbotron text-center" style="background-color: transparent; color: #FFFFFF">
    <h1  style=" color: #FFFFFF">Delete Account</h1>
    <h3>Please enter your credentials to delete your account</h3>
    <h4>You will not be able to recover your account once it is deleted.</h4>

    <div class="form-container">
        <h3>@ViewBag.Message</h3>
        @using (Html.BeginForm("DeleteAccount", "Account", FormMethod.Post))
        {
            <div class="floating-label-group">
                <input type="text" id="Username" name="Username" required />
                <label for="Username">Username</label>
            </div>
            <div class="floating-label-group">
                <div class="input-with-icon">
                    <input style="font-size: 13px" type="password" id="Password" name="Password" maxlength="20" value="@ViewBag.Password" required />
                    <label for="Password">Password</label>
                    <span onclick="showPassword()" id="showIcon" class="info-icon">Show</span>
                </div>
            </div>
            <button class="btn btn-blue-md" type="submit">Delete Account</button>
        }
        <h5>
            @Html.ActionLink("Cancel", "AccountInfo", "Account", null, new { @class = "nav-link", @style = "color: #FFFFFF" })
        </h5>
    </div>
</div>




<style>
    .btn-blue-md {
        display: block; /* Makes each button a block-level element */
        width: 100%; /* Ensures each button stretches to the full width of its container */
        padding: 14px 20px;
        font-size: 14px;
        line-height: 1.333333;
        color: white;
        background-color: #2f4d5a;
        border: 4px solid #FFFFFF;
        border-radius: 75px;
        margin-bottom: 10px; /* Adds space between the buttons */
        text-align: center; /* Center the text in the button */
    }

    .input-with-icon {
        display: flex;
        align-items: center;
    }

    .info-icon {
        cursor: pointer;
        position: absolute;
        right: 0; /* Align the icon to the right side */
        margin-right: 10px;
        top: 50%;
        transform: translateY(-50%); /* Center vertically */
    }

    .form-container {
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: center;
        max-width: 500px; /* Adjust this value based on your design requirements */
        margin: 0 auto; /* Centers the container */
    }

    .floating-label-group {
        position: relative;
        margin-bottom: 20px;
    }

        .floating-label-group input {
            font-size: 14px;
            color: #FFFFFF;
            background-color: #2f4d5a;
            border: 1px solid #FFFFFF;
            padding: 10px 10px 10px 5px;
            display: block;
            width: 100%;
        }

        .floating-label-group label {
            color: #FFFFFF;
            pointer-events: none;
            position: absolute;
            top: 10px;
            left: 5px;
            transition: all 0.2s ease;
        }

        .floating-label-group input:focus ~ label,
        .floating-label-group input:not(:placeholder-shown) ~ label,
        .floating-label-group input.filled ~ label {
            top: -14px;
            font-size: 12px;
        }
</style>

<script>
    function showPassword() {
        var passwordInput = document.getElementById("Password");
        var showIcon = document.getElementById("showIcon");
        if (passwordInput.type === "password") {
            passwordInput.type = "text";
            showIcon.textContent = 'Hide';
        } else {
            passwordInput.type = "password";
            showIcon.textContent = 'Show';
        }
    }
</script>