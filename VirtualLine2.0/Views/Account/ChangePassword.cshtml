<div class="jumbotron text-center" style="zoom: 125%; background-color: transparent; color: #FFFFFF">
    <h2 style=" color: #FFFFFF">Change Password</h2>
    <span onclick="showPasswordRequirements()" class="info-icon">ℹ️</span>
    <h4 style="margin-bottom: 20px">@ViewBag.Message</h4>

    <div class="form-container">
        @using (Html.BeginForm("ChangePassword", "Account", FormMethod.Post))
        {
            <div class="floating-label-group">
                <div class="input-without-icon">
                    <input style="font-size: 13px" type="password" id="OldPassword" name="OldPassword" maxlength="15" required />
                    <label for="OldPassword">Old Password</label>
                    <span onclick="showPasswordOld()" id="showIconOld" class="show-icon" style="font-size: 11px">Show</span>
                </div>
            </div>
            <div class="floating-label-group">
                <div class="input-without-icon">
                    <input style="font-size: 13px" type="password" id="NewPassword" name="NewPassword" maxlength="15" required />
                    <label for="NewPassword">New Password</label>
                    <span onclick="showPasswordNew()" id="showIconNew" class="show-icon" style="font-size: 11px">Show</span>

                </div>
            </div>
            <div class="floating-label-group">
                <div class="input-without-icon">
                    <input style="font-size: 13px" type="password" id="newPasswordConfirmation" name="newPasswordConfirmation" maxlength="15" required />
                    <label for="newPasswordConfirmation">Password</label>
                    <span onclick="showPasswordConfirmation()" id="showIconC" class="show-icon" style="font-size: 11px">Show</span>
                </div>
            </div>
            <button class="btn btn-blue-md" type="submit">Save Changes</button>
        }
        <h5>
            @Html.ActionLink("Cancel", "AccountInfo", "Account", null, new { @class = "nav-link", @style = "color: #E5E5E5" })
        </h5>
    </div>
</div>


<style>
    .btn-blue-md {
        display: block; /* Makes each button a block-level element */
        width: 100%; /* Ensures each button stretches to the full width of its container */
        padding: 14px 20px;
        font-size: 14px;
        line-height: 1.333333;
        color: white;
        background-color: #2f4d5a;
        border: 4px solid #FFFFFF;
        border-radius: 75px;
        margin-bottom: 10px; /* Adds space between the buttons */
        text-align: center; /* Center the text in the button */
    }

    .form-container {
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: center;
        max-width: 1500px; /* Adjust this value based on your design requirements */
        margin: 0 auto; /* Centers the container */
    }

    .input-with-icon {
        display: flex;
        align-items: center;
        width: 107.5%;
    }

    .input-without-icon {
        display: flex;
        align-items: center;
        width: 100%;
    }

    .info-icon {
        cursor: pointer;
        margin-left: 10px;
        /* Removed position absolute and related properties */
    }

    .show-icon {
        cursor: pointer;
        position: absolute;
        right: 0; /* Align the icon to the right side */
        margin-right: 10px;
        top: 50%;
        transform: translateY(-50%); /* Center vertically */
    }

    .floating-label-group {
        position: relative;
        margin-bottom: 20px;
    }

        .floating-label-group input {
            font-size: 14px;
            color: #FFFFFF;
            background-color: #2f4d5a;
            border: 1px solid #FFFFFF;
            padding: 10px 10px 10px 5px;
            display: block;
            width: 100%;
        }

        .floating-label-group label {
            color: #FFFFFF;
            pointer-events: none;
            position: absolute;
            top: 10px;
            left: 5px;
            transition: all 0.2s ease;
        }

        .floating-label-group input:focus ~ label,
        .floating-label-group input:not(:placeholder-shown) ~ label,
        .floating-label-group input.filled ~ label {
            top: -14px;
            font-size: 12px;
        }
</style>

<script>
    window.addEventListener('load', function () {
        window.scrollTo(0, document.body.scrollHeight);
    });

    function showPasswordRequirements() {
        alert("Password must be 6-20 characters long and contain at least one uppercase letter, one lowercase letter, and one number/special character.");
    }

    function showPasswordOld() {
        var passwordInput = document.getElementById("OldPassword");
        var showIcon = document.getElementById("showIconOld");
        if (passwordInput.type === "password") {
            passwordInput.type = "text";
            showIcon.textContent = 'Hide';
        } else {
            passwordInput.type = "password";
            showIcon.textContent = 'Show';
        }
    }
    function showPasswordNew() {
        var passwordInput = document.getElementById("NewPassword");
        var showIcon = document.getElementById("showIconNew");
        if (passwordInput.type === "password") {
            passwordInput.type = "text";
            showIcon.textContent = 'Hide';
        } else {
            passwordInput.type = "password";
            showIcon.textContent = 'Show';
        }
    }
    function showPasswordConfirmation() {
        var passwordInput = document.getElementById("newPasswordConfirmation");
        var showIconC = document.getElementById("showIconC");
        if (passwordInput.type === "password") {
            passwordInput.type = "text";
            showIconC.textContent = 'Hide';
        } else {
            passwordInput.type = "password";
            showIconC.textContent = 'Show';
        }
    }
</script>
