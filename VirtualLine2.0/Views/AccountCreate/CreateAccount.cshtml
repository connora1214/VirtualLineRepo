<head>
    <link href="https://fonts.googleapis.com/css2?family=Comfortaa:wght@300;400;500;600;700&display=swap" rel="stylesheet">
</head>

<div class="form-container" style="font-family: 'Comfortaa'; width:100%">
    <div class="jumbotron text-center" style="font-family: 'Comfortaa'; background-color: transparent; color: #FFFFFF">
        <h2 style=" color: #FFFFFF">Create Account</h2>
        <span onclick="showPasswordRequirements()" class="info-icon">ℹ️</span>
        <h4 style="margin-bottom: 20px">@ViewBag.Message</h4>

        @using (Html.BeginForm("CreateAccount", "AccountCreate", FormMethod.Post))
        {
            <div class="floating-label-group">
                <input type="text" id="Username" name="Username" value="@ViewBag.Username" required />
                <label for="Username">Username</label>
            </div>
            <div class="floating-label-group">
                <div class="input-without-icon">
                    <input type="password" id="Password" name="Password" maxlength="15" value="@ViewBag.Password" required />
                    <label for="Password">Password</label>
                    <span onclick="showPassword()" id="showIcon" class="show-icon" style="font-size:11px">Show</span>
                </div>
            </div>
            <div class="floating-label-group">
                <div class="input-without-icon">
                    <input type="password" id="ConfirmPassword" name="ConfirmPassword" maxlength="15" value="@ViewBag.PasswordConfirmation" required />
                    <label for="ConfirmPassword">Password</label>
                    <span onclick="showPasswordConfirmation()" id="showIconC" class="show-icon" style="font-size:11px">Show</span>
                </div>
            </div>
            <div class="floating-label-group">
                <input type="text" id="FirstName" name="FirstName" value="@ViewBag.FirstName" required />
                <label for="FirstName">First Name</label>
            </div>
            <div class="floating-label-group">
                <input type="text" id="LastName" name="LastName" value="@ViewBag.LastName" required />
                <label for="LastName">Last Name</label>
            </div>
            <div class="floating-label-group">
                <input type="text" id="Email" name="Email" value="@ViewBag.Email" required />
                <label for="Email">Email</label>
            </div>
            <div class="phone-number-group">
                <div class="floating-label-group" style="width: 30%;">
                    <input style="text-align:center; width: 100%;" type="number" id="phonePart1" name="phonePart1" maxlength="3" size="4" value="@ViewBag.Phone1" required />
                    <label for="phonePart1">Phone:</label>
                </div>
                <div class="floating-label-group" style="width: 30%;">
                    <input style="text-align: center; width: 100%;" type="number" id="phonePart2" name="phonePart2" maxlength="3" size="4" value="@ViewBag.Phone2" required />
                </div>
                <div class="floating-label-group" style="width: 30%;">
                    <input style="text-align: center; width: 100%;" type="number" id="phonePart3" name="phonePart3" maxlength="4" size="5" value="@ViewBag.Phone3" required />
                </div>
            </div>
            <button class="btn btn-blue-md" type="submit">Create Account</button>
            <h6>
                By creating an account, you confirm that you are at least 21 years old and agree to our @Html.ActionLink("Terms of Service", "Terms", "Account") and @Html.ActionLink("Privacy Policy", "Privacy", "Account")
            </h6>
        }
    </div>
</div>

<style>
    .btn-blue-md {
        display: block;
        width: 100%;
        padding: 14px 20px;
        font-size: 14px;
        line-height: 1.333333;
        font-family: 'Comfortaa';
        color: white;
        background-color: #2f4d5a;
        border: 4px solid #FFFFFF;
        border-radius: 75px;
        margin-bottom: 10px;
        text-align: center;
    }

    .form-container {
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: center;
        height: 100vh;
        margin: 0 auto;
        max-width: 400px;
        width: 100%;
    }

    .input-with-icon {
        display: flex;
        align-items: center;
        font-family: 'Comfortaa';
        width: 106.5%;
    }

    .input-without-icon {
        display: flex;
        align-items: center;
        font-family: 'Comfortaa';
        width: 100%;
    }

    .info-icon {
        cursor: pointer;
        font-family: 'Comfortaa';
        margin-left: 10px;
    }

    .show-icon {
        cursor: pointer;
        position: absolute;
        font-family: 'Comfortaa';
        right: 0;
        margin-right: 10px;
        top: 50%;
        transform: translateY(-50%);
    }

    .floating-label-group {
        position: relative;
        font-family: 'Comfortaa';
        margin-bottom: 20px;
        width: 100%;
    }

        .floating-label-group input {
            font-size: 15px;
            color: #FFFFFF;
            background-color: #2f4d5a;
            border: 1px solid #FFFFFF;
            font-family: 'Comfortaa';
            padding: 10px 10px 10px 5px;
            display: block;
            width: 100%;
        }

        .floating-label-group label {
            color: #FFFFFF;
            pointer-events: none;
            position: absolute;
            font-family: 'Comfortaa';
            top: 10px;
            left: 5px;
            transition: all 0.2s ease;
            display: flex;
            align-items: center;
        }

        .floating-label-group input:focus ~ label,
        .floating-label-group input:not(:placeholder-shown) ~ label,
        .floating-label-group input.filled ~ label {
            top: -16px;
            font-size: 14px;
        }

    .phone-number-group {
        display: flex;
        justify-content: flex-start;
        font-family: 'Comfortaa';
        align-items: center;
        position: relative;
        width: 100%;
    }

        .phone-number-group .floating-label-group {
            flex-grow: 0;
            flex-shrink: 0;
            margin-right: 5%;
            font-family: 'Comfortaa';
        }

            .phone-number-group .floating-label-group:last-child {
                margin-right: 0;
                font-family: 'Comfortaa';
            }

    input[type="number"]::-webkit-inner-spin-button,
    input[type="number"]::-webkit-outer-spin-button {
        appearance: none;
        display: none;
    }
</style>

<script>
    function showPasswordRequirements() {
        alert("Password must be 6-20 characters long and contain at least one uppercase letter, one lowercase letter, and one number/special character.");
    }

    function showPassword() {
        var passwordInput = document.getElementById("Password");
        var showIcon = document.getElementById("showIcon");
        if (passwordInput.type === "password") {
            passwordInput.type = "text";
            showIcon.textContent = 'Hide';
        } else {
            passwordInput.type = "password";
            showIcon.textContent = 'Show';
        }
    }

    function showPasswordConfirmation() {
        var passwordInput = document.getElementById("ConfirmPassword");
        var showIconC = document.getElementById("showIconC");
        if (passwordInput.type === "password") {
            passwordInput.type = "text";
            showIconC.textContent = 'Hide';
        } else {
            passwordInput.type = "password";
            showIconC.textContent = 'Show';
        }
    }

    document.getElementById('phonePart1').addEventListener('input', function () {
        if (this.value.length === 3) {
            document.getElementById('phonePart2').focus();
        }
    });

    document.getElementById('phonePart2').addEventListener('input', function () {
        if (this.value.length === 3) {
            document.getElementById('phonePart3').focus();
        }
    });
</script>