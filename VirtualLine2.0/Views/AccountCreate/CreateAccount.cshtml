<head>
    <link href="https://fonts.googleapis.com/css2?family=Comfortaa:wght@300;400;500;600;700&display=swap" rel="stylesheet">
</head>

<div class="form-container" style="font-family: 'Comfortaa'; width:100%">
    <div class="jumbotron text-center" style="font-family: 'Comfortaa'; background-color: rgb(229 229 229 / 0.75); color: #FFFFFF">
        <h2 style=" color: #1e1e1e">Create Account</h2>
        <h4 style="margin-bottom: 20px">@ViewBag.Message</h4>

        @using (Html.BeginForm("CreateAccount", "AccountCreate", FormMethod.Post))
        {
            <div class="floating-label-group">
                <input type="text" id="Username" name="Username" value="@ViewBag.Username" required />
                <label for="Username">Username</label>
            </div>
            <div class="floating-label-group">
                <div style="position: relative; max-width:300px">
                    <input type="password" id="Password" name="Password" maxlength="15" value="@ViewBag.Password" required />
                    <span onclick="togglePasswordVisibility()" style="position: absolute; right: 10px; top: 10px; cursor: pointer; color:#1e1e1e">Show</span>
                    <label for="Password">Password</label>
                </div>
            </div>
            <h6 style="text-align:left; color: #1e1e1e; margin-bottom: 30px; max-width: 300px">
                Password must be 6-20 characters long and contain at least one uppercase letter, one lowercase letter, and one number/special character.
            </h6>
            <div class="floating-label-group">
                <input type="password" id="ConfirmPassword" name="ConfirmPassword" maxlength="15" value="@ViewBag.PasswordConfirmation" required />
                <label for="ConfirmPassword">Password</label>
            </div>
            <div class="floating-label-group">
                <input type="text" id="FirstName" name="FirstName" value="@ViewBag.FirstName" required />
                <label for="FirstName">First Name</label>
            </div>
            <div class="floating-label-group">
                <input type="text" id="LastName" name="LastName" value="@ViewBag.LastName" required />
                <label for="LastName">Last Name</label>
            </div>
            <div class="floating-label-group">
                <input type="text" id="Email" name="Email" value="@ViewBag.Email" required />
                <label for="Email">Email</label>
            </div>
            <div class="floating-label-group" style="display: flex; max-width:300px">
                <div class="phone-input-container">
                    <input style="max-width:98px" type="number" id="phonePart1" name="phonePart1" value="@ViewBag.phonePart1" required />
                    <label for="PhoneArea">Phone</label>
                </div>
                <div class="phone-input-container">
                    <input style="max-width:98px" type="number" id="phonePart2" name="phonePart2" value="@ViewBag.phonePart2" required />
                </div>
                <div class="phone-input-container">
                    <input style="max-width:100px" type="number" id="phonePart3" name="phonePart3" value="@ViewBag.phonePart3" required />
                </div>
            </div>


            <button class="btn btn-blue-md" type="submit">Create Account</button>
            <h6 style="color: #1e1e1e">
                By creating an account, you confirm that you are at least 21 years old and agree to our @Html.ActionLink("Terms of Service", "Terms", "Account") and @Html.ActionLink("Privacy Policy", "Privacy", "Account")
            </h6>
        }
    </div>
</div>

<style>


    .btn-blue-md {
        display: block;
        width: 100%;
        padding: 14px 20px;
        font-size: 14px;
        line-height: 1.333333;
        font-family: 'Comfortaa';
        color: #1e1e1e;
        background-color: rgb(64 255 154);
        border: 4px solid #FFFFFF;
        border-radius: 75px;
        margin-bottom: 10px;
        text-align: center;
    }

    .input-with-icon {
        display: flex;
        align-items: center;
        position: relative;
        width: 100%;
    }

    .form-container {
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: center;
        height: 100vh;
        margin: 0 auto;
        max-width: 400px;
        width: 100%;
    }

    .show-icon {
        cursor: pointer;
        margin-left: auto; /* Align to the right */
        align-self: center; /* Vertically center */
        padding: 0 10px; /* Add some padding if needed */
    }


    .phone-input-container {
        flex-grow: 1;
        padding-right: 2px; /* Adjust space between inputs */
    }

        .phone-input-container:last-child {
            padding-right: 0; /* Remove padding for the last input container */
        }

        .phone-input-container input {
            
            max-width: 100px;
            box-sizing: border-box; /* Include padding and border in the element's total width */
        }

    .floating-label-group {
        position: relative;
        font-family: 'Comfortaa';
        margin-bottom: 20px;
        width: 100%;
    }

        .floating-label-group input {
            font-size: 15px;
            background-color: white;
            color: #1e1e1e;
            border: 1px solid #1e1e1e;
            padding: 10px 10px 10px 5px;
            display: block;
            max-width:300px;
            width: 100%;
        }

        .floating-label-group label {
            color: #1e1e1e;
            pointer-events: none;
            position: absolute;
            top: 10px;
            left: 5px;
            transition: all 0.2s ease;
            display: flex;
            align-items: center;
        }

        .floating-label-group input:focus ~ label,
        .floating-label-group input:not(:placeholder-shown) ~ label,
        .floating-label-group input.filled ~ label {
            top: -16px;
            font-size: 14px;
        }

    input[type="number"]::-webkit-inner-spin-button,
    input[type="number"]::-webkit-outer-spin-button {
        appearance: none;
        display: none;
    }

</style>

<script>

    

    function togglePasswordVisibility() {
        var passwordInput = document.getElementById("Password");
        var showText = document.querySelector("#Password + span");

        if (passwordInput.type === "password") {
            passwordInput.type = "text";
            showText.textContent = "Hide";
        } else {
            passwordInput.type = "password";
            showText.textContent = "Show";
        }
    }

    document.getElementById('phonePart1').addEventListener('input', function () {
        if (this.value.length === 3) {
            document.getElementById('phonePart2').focus();
        }
    });

    document.getElementById('phonePart2').addEventListener('input', function () {
        if (this.value.length === 3) {
            document.getElementById('phonePart3').focus();
        }
    });
</script>

